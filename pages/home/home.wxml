<!--pages/home/home.wxml-->
<!-- 1.小程序数据绑定:  {{}} 双大括号Mustache语法 -->
<view class='title'>hello {{name}}</view>
<view>我的年龄是：{{age}}</view>

<!-- 2.列表展示: wx:for循环 -->
<view wx:for="{{students}}">姓名：{{item.name}}-->ID：{{item.id}}-->Age：{{item.age}}</view>

<!-- 3.事件监听改变data -->
<view>当前计数:{{counter}}</view>
<button size='mini' bindtap='jia'>+</button>
<button size='mini' bindtap='jian'>-</button>